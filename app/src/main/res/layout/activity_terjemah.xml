<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/contentView"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_sekolah">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:alpha="0.7"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp">
            <LinearLayout
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_circle">
                <ImageView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:background="@drawable/logonama"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/lyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingTop="@dimen/_35sdp"
                android:paddingLeft="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="@color/grey_3"
                    android:gravity="center"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnRekam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_70sdp"
                        app:cardMaxElevation="@dimen/_5sdp"
                        app:cardElevation="@dimen/_4sdp"
                        app:cardBackgroundColor="@color/hijauMuda">
                        <LinearLayout
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_130sdp"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="@dimen/_130sdp"
                                android:backgroundTint="@color/white"
                                android:background="@drawable/ic_mic"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_17sdp"
                android:paddingBottom="@dimen/_7sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_rounded"
                    android:paddingLeft="@dimen/_13sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Kembali" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>