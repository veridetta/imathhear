<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentUtama"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity.user.HitungActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_sekolah">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_4sdp">

            <LinearLayout
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_circle">

                <ImageView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:background="@drawable/logonama" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_30sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_290sdp"
                        android:layout_weight="9"
                        android:background="@drawable/papan"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_44sdp"
                            android:paddingRight="@dimen/_44sdp"
                            android:paddingTop="@dimen/_30sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/lySatu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_3sdp"
                                    android:orientation="vertical">

                                </LinearLayout>
                                <TextView
                                    android:id="@+id/tvOperasi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="+"
                                    android:textSize="@dimen/_38sdp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />
                                <LinearLayout
                                    android:id="@+id/lyDua"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_3sdp"
                                    android:orientation="vertical">
                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="="
                                    android:textSize="@dimen/_38sdp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_8sdp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:id="@+id/btnOpsiA"
                                        android:layout_width="wrap_content"
                                        android:minWidth="@dimen/_140sdp"
                                        android:layout_height="wrap_content"
                                        android:minHeight="@dimen/_70sdp"
                                        android:gravity="center"
                                        android:background="@drawable/button_rounded"
                                        android:padding="@dimen/_5sdp">
                                        <LinearLayout
                                            android:id="@+id/lyOpsiA"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="@dimen/_3sdp"
                                            android:orientation="vertical">
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/btnOpsiB"
                                        android:layout_width="wrap_content"
                                        android:minWidth="@dimen/_140sdp"
                                        android:layout_height="wrap_content"
                                        android:minHeight="@dimen/_70sdp"
                                        android:gravity="center"
                                        android:background="@drawable/button_rounded"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:padding="@dimen/_5sdp">
                                        <LinearLayout
                                            android:id="@+id/lyOpsiB"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="@dimen/_3sdp"
                                            android:orientation="vertical">

                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:id="@+id/btnOpsiC"
                                        android:layout_width="wrap_content"
                                        android:minWidth="@dimen/_140sdp"
                                        android:layout_height="wrap_content"
                                        android:minHeight="@dimen/_70sdp"
                                        android:gravity="center"
                                        android:background="@drawable/button_rounded"
                                        android:padding="@dimen/_5sdp">
                                        <LinearLayout
                                            android:id="@+id/lyOpsiC"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="@dimen/_3sdp"
                                            android:orientation="vertical">

                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/btnOpsiD"
                                        android:layout_width="wrap_content"
                                        android:minWidth="@dimen/_140sdp"
                                        android:layout_height="wrap_content"
                                        android:minHeight="@dimen/_70sdp"
                                        android:gravity="center"
                                        android:background="@drawable/button_rounded"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:padding="@dimen/_5sdp">
                                        <LinearLayout
                                            android:id="@+id/lyOpsiD"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="@dimen/_3sdp"
                                            android:orientation="vertical">

                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_260sdp"
                        android:layout_weight="3"
                        android:paddingTop="@dimen/_8sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_80sdp"
                                android:background="@drawable/papan"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/_20sdp"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingRight="@dimen/_20sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Skor :"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp" />

                                <LinearLayout
                                    android:id="@+id/lyInduk"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingTop="@dimen/_7sdp">

                                </LinearLayout>
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                android:background="@drawable/papan"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_110sdp"
                                    android:layout_height="@dimen/_120sdp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="@dimen/_8sdp"
                                    android:background="@drawable/ic_nilai" />
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_17sdp"
                android:paddingBottom="@dimen/_7sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_rounded"
                    android:paddingLeft="@dimen/_13sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Kembali" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_39sdp"
                android:paddingBottom="@dimen/_7sdp">

                <TextView
                    android:id="@+id/tvBtnNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_rounded"
                    android:paddingLeft="@dimen/_13sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Periksa Jawban \n &amp; Lanjutkan" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_17sdp"
                android:paddingBottom="@dimen/_7sdp">

                <ImageView
                    android:id="@+id/btnHome"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/ic_home"
                    android:backgroundTint="@color/biruMuda" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>