<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_sekolah">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_20sdp">
            <LinearLayout
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_circle">
                <ImageView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:background="@drawable/logonama"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/_25sdp">
                <ImageView
                    android:id="@+id/imgSiswa"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_230sdp"
                    android:background="@drawable/orang_sd"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/lyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_30sdp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnMateri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardMaxElevation="@dimen/_4sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="@dimen/_160sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_gravity="center"
                                android:background="@color/biru"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/materi"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_20sdp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnGames"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardMaxElevation="@dimen/_4sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="@dimen/_160sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_gravity="center"
                                android:background="@color/unguMuda"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="GAMES"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_20sdp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnTerjemahkan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardMaxElevation="@dimen/_4sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="@dimen/_160sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_gravity="center"
                                android:background="@color/hijau"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/terjemahkan"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_20sdp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardMaxElevation="@dimen/_4sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="@dimen/_160sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_gravity="center"
                                android:background="@color/merahMuda"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="INFO"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_20sdp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingRight="@dimen/_13sdp"
            android:paddingTop="@dimen/_13sdp">
            <ImageView
                android:id="@+id/btnAdmin"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_admin"
                android:backgroundTint="@color/biruMuda"
                />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>